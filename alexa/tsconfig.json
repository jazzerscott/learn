{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6", "dom"],
        "allowJs": true,
        "types": ["reflect-metadata", "node"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "outDir": "dist",
        "noUnusedLocals": true,
        "watch": false

    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}